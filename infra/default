server {
    server_name 84.201.154.1 prjct.hopto.org;

    location /api/ {
       proxy_pass http://127.0.0.1:8000;
    }

    location /admin/ {
        proxy_pass http://127.0.0.1:8000;
    }

    location / {
        root   /var/www/taski;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/prjct.hopto.org-0001/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/prjct.hopto.org-0001/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
server {
    if ($host = prjct.hopto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot



    listen 80;
    server_name 84.201.154.1 prjct.hopto.org;
    return 404; # managed by Certbot


}
server {
    server_name prjctfnl.hopto.org;

    location /api/ {
        client_max_body_size 20M;
        proxy_pass http://127.0.0.1:8080;
    }

    location /admin/ {
OA      client_max_body_size 20M;
        proxy_pass http://127.0.0.1:8080;
    }
    location /media/ {
        alias /var/www/kittygram/media/;
    }

    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot

    location /media/ {
        alias /var/www/kittygram/media/;
    }

    location / {
        root   /var/www/kittygram;
        index  index.html index.htm;
        try_files $uri /index.html;
    }


    listen 443 ssl; # managed by Certbot




    listen 80;
    server_name prjctfnl.hopto.org;
    return 404; # managed by Certbot


}
